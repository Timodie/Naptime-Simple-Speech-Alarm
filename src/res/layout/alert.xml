<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Never show up again"
            android:id="@+id/checkBox"
            android:background="@null"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/context2"
            android:layout_alignLeft="@+id/context2"
            android:layout_alignStart="@+id/context2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Alert! Location Services are off"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you still want to use weather feature"
            android:id="@+id/context"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set your location manually in General Settings or turn on location services"
            android:id="@+id/context2"
            android:layout_below="@+id/context"
            android:layout_alignLeft="@+id/context"
            android:layout_alignStart="@+id/context" />

    </RelativeLayout>
</LinearLayout>